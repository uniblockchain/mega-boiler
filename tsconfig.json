{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowUnreachableCode": false,
    "allowJs": true,
    "alwaysStrict": false,
    "checkJs": false,
    "newLine": "LF",
    "sourceMap": true,
    "pretty": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ]
}
