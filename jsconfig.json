{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noEmit": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "alwaysStrict": false,
    "checkJs": false,
    "newLine": "LF",
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*"
  ]
}
